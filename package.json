{
  "name": "playwright-cucumber-rudderstack-framework",
  "version": "1.0.0",
  "description": "Playwright + Cucumber automation framework with RudderStack integration",
  "main": "index.js",
  "scripts": {
    "test:dev": "cross-env ENV=dev npx cucumber-js --config cucumber.config.js",
    "test:qa": "cross-env ENV=qa npx cucumber-js --config cucumber.config.js",
    "test:prod": "cross-env ENV=prod npx cucumber-js --config cucumber.config.js",
    "test:debug": "DEBUG=true npm test",
    "format": "prettier --write .",
    "install-browsers": "npx playwright install"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "automation",
    "testing",
    "rudderstack",
    "bdd"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "dependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "axios": "^1.6.2",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "cross-env": "^10.0.0",
    "playwright": "^1.54.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
